    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^29.7.0",
    "fake-indexeddb": "^6.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.2.1",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "util": "^0.12.5"
